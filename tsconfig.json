{
  "compilerOptions": {
    "outDir": "./built",
    "allowJs": true,
    "module": "es2022",
    "target": "es2022",
    "lib": ["es6"],
    "types": ["reflect-metadata", "mocha"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
